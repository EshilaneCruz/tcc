<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cityPartView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="CITY"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tripPartPeriodView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityPartView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:text="MON DD - MON DD"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />
    <LinearLayout
        android:id="@+id/partialActionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:layout_below="@+id/tripPartPeriodView">
        <ImageButton
            android:id="@+id/partEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checklist"
            android:background="@android:color/transparent"
            android:paddingHorizontal="16dp" />
        <ImageButton
            android:id="@+id/eventsEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_events"
            android:background="@android:color/transparent"
            android:paddingHorizontal="16dp" />
    </LinearLayout>
</RelativeLayout>